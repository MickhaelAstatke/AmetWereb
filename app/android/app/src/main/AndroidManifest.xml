<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:label="Lyric Companion"
        android:name="io.flutter.app.FlutterApplication"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.app.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.LyricCompanion"
            android:configChanges="keyboardHidden|keyboard|orientation|screenSize|locale|layoutDirection"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="io.flutter.embedding.android.NormalTheme"
            android:resource="@style/Theme.LyricCompanion" />
    </application>
</manifest>
